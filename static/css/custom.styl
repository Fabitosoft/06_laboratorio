@page
  size letter
  margin 0

@media print
  .impresion
    &-orden-laboratorio
      margin 10px
      max-height 15px
      border initial
      border-radius initial
      width initial
      box-shadow initial
      background initial
      page-break-after always

.impresion
  &-orden-laboratorio
    font-size 11px

    .logo
      height 100px
    .cabezote
      font-size 11px
    .orden
      .datos-generales
        font-size 10px
      table
        td, th
          padding-top 0 !important
          padding-bottom 0 !important
          margin-top 0 !important
          margin-bottom 0 !important
        font-size 9px
      .campo
        border solid 1px black

table
  font-size 0.8rem
  .fa-check
    color green
  .fa-exclamation-triangle
    color red

.form-field-error
  position relative
  bottom 15px
  font-size 12px
  line-height 12px
  color rgb(244, 67, 54)
  transition all 450ms cubic-bezier(0.23, 1, 0.32, 1) 0ms

.cursor-pointer
  cursor pointer

.text-multiline
  white-space pre-wrap